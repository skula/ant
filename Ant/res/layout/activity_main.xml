                    android:text="Fermer" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Retour" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pl.Ecr." />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

